<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asupersayan.myappluis.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        app:srcCompat="@mipmap/ic_launcher"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Androarmst"
        android:textSize="45sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:layout_marginBottom="30sp"
        />


    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="wrap_content"
        android:width="280sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"

        android:hint="Usuario"
        android:layout_marginBottom="30sp"
        android:textColor="#BABABA"
        />

    <EditText
        android:id="@+id/etContrase単a"
        android:layout_width="wrap_content"
        android:width="280sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"

        android:hint="Contrase単a"
        android:layout_marginBottom="30sp"
        android:textColor="#BABABA"
        />

    <Button
        android:id="@+id/btnEnviarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="ENVIAR"
        android:textColorHint="#2B5D92"
        android:textStyle="bold"
        android:layout_marginBottom="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多Has olvidado tu contrase単a?"
        android:textSize="13sp"
        android:textColor="#BABABA"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:textSize="13sp"
        android:textColor="#BABABA"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        />






</LinearLayout>



